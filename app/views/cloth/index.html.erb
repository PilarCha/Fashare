                    </div>
                </div>
                <div id="breakpoint">

                </div>
            </div>
        </div>
        <div id="content-wrapper">
            <div class="carousel-wrapper">
                <div class="carousel-name">
                    Most Popular
                </div>
                <div class="carousel-row">
                  <%@AllClothes.each do |clothing|%>
