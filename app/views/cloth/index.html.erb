                        <div class="item-img"> <img src="<%=clothing.imagelink%>"> </div>
                        <div class="item-description"> <%=clothing.apparel%> </div>
                        <div class="item-price"> <%=clothing.price%>/day </div>
                    </a>
                  <%end%>
                </div>
            </div>
            <div class="carousel-wrapper">
                <div class="carousel-name">
                    Recently Added
                </div>
                <div class="carousel-row">
                  <%@Recent.each do |newest|%>
                    <a class="carousel-item" style="text-decoration: none;" href="/show/<%=newest.id%>">
